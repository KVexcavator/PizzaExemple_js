<h3>Your cart</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">In cart</th>
    </tr>
  </thead>
  <tbody>
  <% i=1 %>
  <% @items.each do |item| %>   
    <tr>
      <th scope="row"><%= i %></th>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% i=i+1 %>
  <% end  %>
  </tbody>
</table>